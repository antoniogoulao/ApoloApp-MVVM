<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StyleArtistInfo" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/info_artist_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/info_artist_margin_start</item>
    </style>

</resources>
